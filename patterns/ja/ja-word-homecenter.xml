<?xml version="1.0" encoding="UTF-8"?>
<patterns lang="ja">
	<!-- facet : 抽出したキーワードをどのファセットに割り当てるか -->
	<!-- value : 抽出したパターンからキーワードの正規形を定義する -->
	<!-- {0.lex} : id=0 のキーワードの正規形 -->
	<!-- {2.lex} : id=2 のキーワードの正規形 -->
	<!-- <w /> : 単語を表す -->
	<!-- <w lex="/(が|は)/" /> : 正規形が「が」または「は」である単語 -->
	<!-- <w upos="ADP" /> : Universal POSが ADP(助詞) である単語 -->
	<!-- <w upos="NOUN" /> : Universal POSが NOUN(名詞) である単語 -->

	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="カインズ" />
	</pattern>
	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="ニトリ" />
	</pattern>
	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="無印" />
	</pattern>
	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="イオン" />
	</pattern>
	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="コメリ" />
	</pattern>
	<pattern facet="word.brands" value="{0.lex}">
		<w id="0" lex="フェリシモ" />
	</pattern>
	

	<pattern facet="word.products" value="{0.lex}">
		<w id="0" lex="椅子" />
	</pattern>
	
	<pattern facet="word.products" value="{0.lex}{1.lex}">
		<w id="1" lex="シート">
			<w id="0" lex="まな板" />
		</w>
	</pattern>
	<pattern facet="word.products" value="{0.lex}{1.lex}">
		<w id="1" lex="シート">
			<w id="0" lex="まな板" />
		</w>
	</pattern>
	<pattern facet="word.products" value="{0.lex}{1.lex}">
		<w id="1" lex="ほうき">
			<w id="0" lex="立つ" />
		</w>
	</pattern>
	<pattern facet="word.products" value="{0.lex}{1.lex}">
		<w id="1" lex="ブラシ">
			<w id="0" lex="玄関" />
		</w>
	</pattern>

</patterns>

